# Microsoft Graph API (Azure AD App Registration)
# Get these from Azure Portal > App Registrations
GRAPH_CLIENT_ID=your-client-id-here
GRAPH_CLIENT_SECRET=your-client-secret-here
GRAPH_TENANT_ID=your-tenant-id-here

# PostgreSQL Database (running in WSL on localhost)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teams_notetaker
DB_USER=postgres
DB_PASSWORD=your-database-password-here

# Claude API (Anthropic)
# Get from https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-your-api-key-here

# Azure AD SSO (Optional - for web dashboard authentication)
# Can use same credentials as Graph API or separate app registration
AZURE_AD_ENABLED=true
AZURE_AD_CLIENT_ID=your-client-id-here
AZURE_AD_CLIENT_SECRET=your-client-secret-here
AZURE_AD_TENANT_ID=your-tenant-id-here
AZURE_AD_REDIRECT_URI=http://localhost:8000/auth/callback
# Comma-separated list of email domains allowed to log in (all domains in your tenant)
AZURE_AD_ALLOWED_DOMAINS=townsquaremedia.com,townsquareignite.com,townsquareinteractive.com

# JWT Secret (for session tokens)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=generate-a-secure-random-key-here

# Role-Based Access Control
# Comma-separated list of emails
ADMIN_USERS=your-email@townsquaremedia.com
MANAGER_USERS=
